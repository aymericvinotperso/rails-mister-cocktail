<h2>Cocktails</h2>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, crop: :fill %>');">
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2><%= link_to(cocktail.name, cocktail_path(cocktail), class: "link-no-style")%></h2>
          <p>Main ingredient(s):
          <% cocktail.doses.each do |dose| %>
          <%= dose.ingredient.name %>
          <% end %>
          </p>
        </div>
        <%= link_to('', cocktail_path(cocktail), method: :delete, class: "fa fa-trash card-user" ) %>
      </div>
    </div>
    <% end %>
  </div>
</div>




